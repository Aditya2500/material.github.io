                                <li class="gridicons gridIconlist" title="Delete "><button type="button" hidebtn="hidebtn" id="btnDeletePackagingRow"><span class="iconsprite deleteIcon griddeleteIcon">Delete</span></button></li>
                                <li class="gridicons gridIconlist" title="Take Left"><button type="button" hidebtn="hidebtn" id="btnLeftPackagingRow"><span class="iconsprite arrowleftIcon gridarrowleftIcon">Left</span></button></li>
                                <li class="gridicons gridIconlist" title="Take Right"><button type="button" hidebtn="hidebtn" id="btnRightPackagingRow"><span class="iconsprite arrowrightIcon gridarrowrightIcon">Right</span></button></li>
                                <li class="gridicons gridIconlist" title="Take Up"><button type="button" hidebtn="hidebtn" id="btnUpPackagingRow"><span class="iconsprite arrowupIcon gridarrowupIcon">Up</span></button></li>
                                <li class="gridicons gridIconlist" title="Take Down"><button type="button" hidebtn="hidebtn" id="btnDownPackagingRow"><span class="iconsprite arrowdownIcon gridarrowdownIcon">Down</span></button></li>
                                <li class="gridicons gridIconlist" title="Undo"><button type="button" hidebtn="hidebtn" id="btnUndoRow"><span class="iconsprite arrowdownIcon gridarrowdownIcon">Undo</span></button></li>
                            </ul>
                            <div class="levelSelect"><select id="btnTogglePackagingRow" title="Show/Hide Level"><option value="showAll">Show All</option><option value="0">Hide L2 & L3</option><option value="1">Hide L3</option></select></div>
